<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <!--Navigation-->
    <ImageView
        android:id="@+id/toolbar_menu_icon_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent" />


    <!--左侧文本文本菜单-->
    <TextView
        android:id="@+id/toolbar_menu_text_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:text="关闭"
        android:textColor="#979797"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!--中间标题-->
    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17sp"
        android:visibility="visible" />


    <!--右侧文本2-->
    <TextView
        android:id="@+id/toolbar_menu_text_right_v2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:text="菜单2"
        android:textColor="#2C2D31"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_menu_text_right" />

    <!--右侧文本1-->
    <TextView
        android:id="@+id/toolbar_menu_text_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:text="菜单1"
        android:textColor="#2C2D31"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/toolbar_menu_icon_right_v2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@color/black"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@+id/toolbar_menu_icon_right" />

    <ImageView
        android:id="@+id/toolbar_menu_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@color/black"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>